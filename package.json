{
  "name": "portfolio",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "format:check": "prettier --check 'src/**/*' '!**/gen/**' '!**/__snapshots__/**' '!**/.DS_Store/**' '!src/**/*.svg'",
    "gen": "graphql-codegen --config codegen.yml",
    "lint:check": "eslint --max-warnings 0 'src/**/*'",
    "precommit": "lint-staged",
    "start": "yarn; if [ \"$NODE_ENV\" = \"production\" ]; then next start; else next; fi",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,html,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "nodemonConfig": {
    "exec": "npx ts-node ./src/index.ts",
    "ext": "ts,js,tsx,jsx",
    "watch": [
      "src"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "react-app",
      "airbnb-typescript",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-underscore-dangle": 0
    }
  },
  "eslintIgnore": [
    "**/generated/**/*",
    "**/*.json",
    "**/*.graphql",
    "**/*.snap",
    "**/*.svg"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.tsx"
    ],
    "coverageReporters": [
      "text"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.tsx"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "dependencies": {
    "@types/jest": "^26.0.10",
    "i18next": "^19.6.3",
    "next": "^9.5.2",
    "next-i18next": "^6.0.2",
    "next-images": "^1.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.7.0",
    "react-responsive": "^8.1.0",
    "react-scroll": "^1.8.1",
    "react-spring": "^8.0.27",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-responsive": "^8.0.2",
    "@types/react-scroll": "^1.8.0",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
